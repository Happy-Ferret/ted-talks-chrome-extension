{
  "manifest_version": 2,
  "name": "TED Talks",
  "description": "Access latest TED Talks in the Files.app",

  "version": "0.2",

  "icons": {
    "32": "assets/icon_32.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [
    "unlimitedStorage",
    "storage",
    "http://*.ted.com/*",
    "http://feeds.feedburner.com/*",
    "fileSystemProvider"
  ],

  "minimum_chrome_version": "40.0.2214.43 ",

  "background": {
    "persistent": false,
    "scripts": [ "feed-parser.js", "background.js"]
  }
}
