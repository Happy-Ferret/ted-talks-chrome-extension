{
  "manifest_version": 2,
  "name": "TED Talks",
  "description": "Access latest TED Talks in the Files.app",

  "version": "0.0.0.1",
  "version_name": "DEV",

  "icons": {
    "32": "assets/icon_32.png",
    "128": "assets/icon_128.png"
  },

  "permissions": [
    "alarms",
    "unlimitedStorage",
    "storage",
    "http://*.ted.com/*",
    "http://feeds.feedburner.com/*",
    "fileSystemProvider"
  ],

  "minimum_chrome_version": "41.0.2252.3",

  "background": {
    "persistent": false,
    "scripts": [ "feed-parser.js", "background.js"]
  }
}
